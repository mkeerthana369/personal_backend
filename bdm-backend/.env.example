// ============================================
// FILE: .env.example
// ============================================
// Server Configuration
PORT=5000
NODE_ENV=development

// Database Configuration (NEW DATABASE FOR SAFETY)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=Vidyavardhaka@1
DB_NAME=bdm_system_v2
DB_PORT=3306

// ============================================
// AI PROVIDERS (Priority Order: Ollama → OpenRouter → OpenAI)
// ============================================

// 1. OLLAMA (Local LLM - RECOMMENDED FOR FREE + FAST)
USE_OLLAMA=true
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:1.5b
# Install: winget install Ollama.Ollama
# Pull model: ollama pull qwen2.5:1.5b

// 2. OPENROUTER (Cheap cloud option)
USE_OPENROUTER=false
OPENROUTER_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct
OPENROUTER_FALLBACK_MODELS=google/gemini-flash-1.5,qwen/qwen-2-7b-instruct,mistralai/mistral-7b-instruct

// 3. OPENAI (Fallback - most reliable but paid)
USE_OPENAI=false
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-3.5-turbo

// CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173